<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ポエム一覧</h1>

    <% @poems.each do |poem| %>
      <div class="row">
        <h4><strong><%= poem.title %></strong></h4>
        <p><%= poem.content %></P>
        <%= link_to "Show", poem_path(poem.id), class: 'btn btn-sm btn-info' %>
      </div>
    <% end %>
  </div>
</div>
